@model WeatherDashNine.Models.CityModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = "SearchCity";
}

<div class="container">

    <form method="post">

        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the forecast in a city</h2>
                <label asp-for="Name" style="font-family: Arial"></label>
                <input asp-for="Name" id="autocomplete" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="Weather" asp-action="City" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>